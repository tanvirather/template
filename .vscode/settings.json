{
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.indentSize": 2,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 200,
  "editor.detectIndentation": false,
  "editor.codeActionsOnSave": {
    "source.removeUnusedImports": "always",
    "source.organizeImports": "always",
  },
  "files.exclude": {
    ".config": true,
    ".editorconfig": true,
    ".gitignore": true,
    "**/.git": true,
    "**/bin": true,
    "**/node_modules": true,
    "**/obj": true,
    "**/package-lock.json": true,
    "**/Properties": true,
    "ai": true,
    "Auth.Tests": true,
    "Auth": false,
    "Base.Tests": true,
    "Base": false,
    "License": true,
    "Product.Tests": true,
    "Product": true,
    "readme.md": true,
    "Template.slnx": true,
    "Weather": true,
    "Web.BlazorWasm": true,
    "web.server": true,
  },
  "files.watcherExclude": {
    ".config": true,
    ".editorconfig": true,
    ".gitignore": true,
    "**/.git": true,
    "**/bin": true,
    "**/node_modules": true,
    "**/obj": true,
    "**/package-lock.json": true,
    "**/Properties": true,
    "License": true,
  },
  "search.exclude": {
    ".config": true,
    ".editorconfig": true,
    ".gitignore": true,
    "**/.git": true,
    "**/bin": true,
    "**/node_modules": true,
    "**/obj": true,
    "**/package-lock.json": true,
    "**/Properties": true,
    "License": true,
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "appsettings.json": "appsettings.*.json",
    "*.cs": "${capture}.*",
  },
  "dotnet.automaticallyCreateSolutionInWorkspace": false,
  "editor.renderFinalNewline": "on",
  "files.insertFinalNewline": true,
  "omnisharp.enableEditorConfigSupport": true,
}
