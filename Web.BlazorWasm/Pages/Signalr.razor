@page "/signalr"
@using System.Data

<PageTitle>DataTable</PageTitle>

<SignalrTable DataTable="@table" />
@code {
  private DataTable table = new()
  {
    Columns = {
      new DataColumn("Name") { Caption = "Name <i>other</i> &#8593;" },
      new DataColumn("Age")
    }
  };

  protected override void OnInitialized()
  {
    table.Rows.Add("<i>John</i>", 30);
    table.Rows.Add("Jane", 25);
  }
}
